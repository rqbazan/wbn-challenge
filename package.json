{
  "name": "wbn-challenge",
  "version": "0.0.0-semantically-released",
  "author": {
    "name": "Ricardo Q. Bazan",
    "email": "raquirozbazan@gmail.com",
    "url": "https://sxntixgo.codes"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "storybook": "start-storybook",
    "next:export": "next build && next export",
    "storybook:export": "build-storybook -o out/storybook",
    "build": "yarn next:export && yarn storybook:export"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "yarn eslint",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "rqbazan-js/react"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "next": "^9.1.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@storybook/react": "^5.2.5",
    "@storybook/theming": "^5.2.5",
    "@zeit/next-css": "^1.0.1",
    "autoprefixer": "^9.6.5",
    "babel-loader": "^8.0.6",
    "eslint": "^6.5.1",
    "eslint-config-rqbazan-js": "^0.3.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "tailwindcss": "^1.1.2"
  }
}